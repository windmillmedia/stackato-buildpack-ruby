#!/usr/bin/env bash
# bin/release <build-dir>

BIN_DIR=$(cd $(dirname $0); pwd) # absolute path
BUILD_DIR=$1
NAME=$($BIN_DIR/detect $BUILD_DIR) || exit 1

#cat <<EOF
#---
#config_vars:
#  PATH: /opt/rubies/current/bin:$PATH
#EOF


[ "$NAME" = "Ruby/Rails" ] || exit 0

cat <<EOF

default_process_types:
  web:      bundle exec rails server
EOF
